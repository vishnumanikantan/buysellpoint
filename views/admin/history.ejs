<body>
  <nav class="shadow p-3  navbar navbar-expand-lg">
                  <a class="navbar-brand">Welcome, <strong><%=currentUser.firstName%></strong></a>
                  <button class="navbar-toggler bg-warning" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">Menu&nbsp;<i class="fas fa-bars"></i></button>
                  <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav ml-auto">
                      <li class="nav-item active ml-lg-5 my-2 my-lg-0">
                        <a class="nav-link" href="/admind"><i class="fas fa-globe-asia"></i>&nbsp;Admin Dashboard</a>
                      </li>
                      <li class="nav-item ml-lg-5 my-2 my-lg-0">
                        <a class="nav-link" href="/admind/rates"><i class="fas fa-file-invoice-dollar"></i>&nbsp;Set Rates</a>
                      </li>
                      <li class="nav-item ml-lg-5 my-2 my-lg-0">
                        <a class="nav-link" href="/admind/history"><i class="fas fa-history"></i>&nbsp;Transaction History</a>
                      </li>
                      <li class="nav-item ml-lg-5 my-2 my-lg-0">
                        <a class="btn btn-success" href="/"><i class="fas fa-home"></i>&nbsp;Home</a>
                      </li>
                      <li class="nav-item ml-lg-5 my-2 my-lg-0">
                        <a class="btn btn-danger" href="/logout"><i class="fas fa-sign-out-alt"></i>&nbsp;Logout</a>
                      </li>
                    </ul>
                </div>          
        </nav>
<div class="container-fluid m-0 p-2">
  <div class="card p-2 pb-4 mb-4">
            <h3 class="h3 mx-auto">Transaction History</h3>
            <table class="table table-striped table-responsive table-bordered">
              <thead>
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">Transaction ID</th>
                  <th scope="col">Date</th>
                  <th scope="col">Customer Details</th>
                  <th scope="col">Buy/Sell</th>
                  <th scope="col">Transaction Name</th>
                  <th scope="col">Amount</th>
                  <th scope="col">Rate</th>
                  <th scope="col">Pay/Recieve</th>
                  <th scope="col">Account Details</th>
                  <th scope="col">Remarks</th>
                </tr>
              </thead>
              <tbody>
                  <% var i=0; %>
                  <% transactions.forEach(function(transaction){ %>
                      <% if(transaction.isCompleted){ %>
                          <% transaction.date.setHours(transaction.date.getHours() + 5); %>
                          <% transaction.date.setMinutes(transaction.date.getMinutes() + 30);%>
                          <tr>
                            <th scope="row"><%= ++i; %></th>
                            <td><%= transaction.transactionId %></td>
                            <td><%= transaction.date.getDate() %>/<%= transaction.date.getMonth() %>/<%= transaction.date.getFullYear() %></td>
                            <td>Name: <%= transaction.author.firstName %><br>Email:<%= transaction.author.email %><br>Phone: <%= transaction.author.phone %></td>
                            <td><%= transaction.type %></td>
                            <td><%= transaction.name %></td>
                            <td><%= transaction.amount %></td>
                            <td><%= transaction.rate %></td>
                            <td><%= transaction.payable %></td>
                            <td><%= transaction.account %></td>
                            <td><%= transaction.status %></td>
                          </tr>
                      <% } %>
                      <% }); %>
              </tbody>
              </table>
        </div>
</div>
