<script type="text/javascript">
	
	$('.home-link').click(() => {
	    $('html, body').animate({
	        scrollTop: 0
	    }, 400);
	});

	$('.rates-link').click(() => {
	    if(window.pageYOffset != 0){
		    $('html, body').animate({
		        scrollTop: $('.rates').offset().top - ($(document).height()/20)
		    }, 400);
	    }else{
		    $('html, body').animate({
		        scrollTop: $('.rates').offset().top - ($(document).height()/7.5)
		    }, 400);    
	    }
	});

	$('.faq-link').click(() => {
		
	    if(window.pageYOffset != 0){
		    $('html, body').animate({
